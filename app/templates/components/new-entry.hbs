{{#if addNewEntry}}
  <h1>New Blog Entry</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="content">Write Your Blog Content Here:</label>
        {{textarea value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveEntry1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'entryFormShow'}}>New Blog Entry</button>
{{/if}}
